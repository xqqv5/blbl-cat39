<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay_Blbl_Circular">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay_Blbl_Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ThemeOverlay.Blbl.TransparentDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ThemeOverlay.Blbl.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/blbl_blue</item>
        <item name="colorOnPrimary">@color/blbl_text</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Widget.Blbl.MaterialAlertDialog.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Widget.Blbl.MaterialAlertDialog.Body.Text</item>
        <!-- For single-choice dialogs (ListView in AlertDialog): inject via listViewStyle for reliability. -->
        <item name="android:listViewStyle">@style/Widget.Blbl.Dialog.ListView</item>
        <item name="android:dropDownListViewStyle">@style/Widget.Blbl.Dialog.ListView</item>
    </style>

    <style name="Widget.Blbl.Dialog.ListView" parent="Widget.AppCompat.ListView">
        <item name="android:listSelector">@drawable/blbl_focus_list_selector_round</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="Widget.Blbl.MaterialAlertDialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/blbl_text</item>
    </style>

    <style name="Widget.Blbl.MaterialAlertDialog.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/blbl_text_secondary</item>
    </style>

    <style name="TextAppearance.Blbl.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.Blbl.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Blbl.Tab</item>
        <item name="tabIndicator">@drawable/blbl_tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabPaddingTop">4dp</item>
        <item name="tabPaddingBottom">2dp</item>
    </style>

    <!-- Player OSD sizing overlays: pick by prefs (S/M/L). -->
    <style name="ThemeOverlay.Blbl.PlayerOsd.Normal.Small" parent="ThemeOverlay.MaterialComponents">
        <item name="playerOsdButtonTargetSize">@dimen/player_osd_button_target_size_s</item>
        <item name="playerOsdPadTransport">@dimen/player_osd_pad_transport_s</item>
        <item name="playerOsdPadNormal">@dimen/player_osd_pad_normal_s</item>
        <item name="playerOsdPadSmall">@dimen/player_osd_pad_small_s</item>
        <item name="playerOsdGap">@dimen/player_osd_gap_s</item>
    </style>

    <style name="ThemeOverlay.Blbl.PlayerOsd.Normal.Medium" parent="ThemeOverlay.MaterialComponents">
        <item name="playerOsdButtonTargetSize">@dimen/player_osd_button_target_size_m</item>
        <item name="playerOsdPadTransport">@dimen/player_osd_pad_transport_m</item>
        <item name="playerOsdPadNormal">@dimen/player_osd_pad_normal_m</item>
        <item name="playerOsdPadSmall">@dimen/player_osd_pad_small_m</item>
        <item name="playerOsdGap">@dimen/player_osd_gap_m</item>
    </style>

    <style name="ThemeOverlay.Blbl.PlayerOsd.Normal.Large" parent="ThemeOverlay.MaterialComponents">
        <item name="playerOsdButtonTargetSize">@dimen/player_osd_button_target_size_l</item>
        <item name="playerOsdPadTransport">@dimen/player_osd_pad_transport_l</item>
        <item name="playerOsdPadNormal">@dimen/player_osd_pad_normal_l</item>
        <item name="playerOsdPadSmall">@dimen/player_osd_pad_small_l</item>
        <item name="playerOsdGap">@dimen/player_osd_gap_l</item>
    </style>
</resources>
